<p>
  <b>Project:</b>
  <%=h @lot.project %>
</p>

<p>
  <b>Site street:</b>
  <%=h @lot.site_street %>
</p>

<p>
  <b>Exact loc:</b>
  <%=h @lot.exact_loc %>
</p>

<p>
  <b>Land ownership:</b>
  <%=h @lot.land_ownership %>
</p>

<p>
  <b>Borough:</b>
  <%=h @lot.borough %>
</p>

<p>
  <b>Ward:</b>
  <%=h @lot.ward %>
</p>

<p>
  <b>Postcode:</b>
  <%=h @lot.postcode %>
</p>

<p>
  <b>Geo x:</b>
  <%=h @lot.geo_x %>
</p>

<p>
  <b>Geo y:</b>
  <%=h @lot.geo_y %>
</p>

<% if  @lot.tree.nil?%>
  <p>There is no tree in this lot, yet</p>
<% else %>
	<h2>Tree</h2>
	<ul cass="trees">
	  <%= render :partial=>'trees/tree', :object=>@lot.tree%>
	</ul>
<% end %>
<p class="options">
  <%= link_to "Create tree", new_tree_path(:lot_id=> @lot) %>
  <%= link_to 'Edit this Lot', edit_lot_path(@lot) %>
  <%= link_to 'Delete this Lot', @lot, :confirm => 'Are you sure?', :method => :delete %>
</p>
<p><%= link_to 'Back', lots_path %></p>

