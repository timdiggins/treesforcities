<h1>Lots</h1>

<ul class="lots">

<% @lots.each do |lot| %>
  <li>
    <h2><%=h lot.id %>: <%=h lot.project %></h2>
    <p>Street: <%=h lot.site_street %></p>
    <p>Location: <%=h lot.exact_loc %></p>
    <p>Borough: <%=h lot.borough %>, Ward: <%=h lot.ward %></p>
    <p>owned by: <%=h lot.land_ownership %></p>
    <p class="options">
      <%= link_to 'Show', lot %>
      <%= link_to 'Edit', edit_lot_path(lot) %>
      <%= link_to 'Destroy', lot, :confirm => 'Are you sure?', :method => :delete %>
    </p>
  </li>
<% end %>
</ul>

<p><%= link_to 'New lot', new_lot_path %></p>