<div class="grid_16">
  <h1>Login</h1>

  <% form_tag session_path, {:id=>'loginForm'} do -%>
  	<p><%= label_tag 'login' %>
  	<%= text_field_tag 'login', @login %></p>
	
  	<p><%= label_tag 'password' %>
  	<%= password_field_tag 'password', nil %></p>
	
  	<p><%= check_box_tag 'remember_me', '1', @remember_me %>
  	<%= label_tag 'remember_me', 'Remember me', :class => "linedUp" %>
  	</p>
	
  	<p><%= submit_tag 'Log in' %></p>
  <% end -%>
</div>